<!--pages/car_news/car_news.wxml-->
<view class='bg'>
  <view class='list' wx:for="{{list}}" wx:key="*.this" wx:for-item="item">
  <view class='item'  >
    <view class='content' bindtap='newsmsg' id="{{item.id}}">
      <image class='img' mode='scaleToFill' src='{{item.icon}}'></image>
      <text class='title'>{{item.title}}</text>
      <text class='time'>{{item.time}}</text>
    </view>
  </view>
  </view>

  <view class='bottom'></view>  
</view>



