/* pages/feedback/feedback.wxss */
.top{
  height: 20px;
}

.bgView{
  width: 90%;
  height: 500rpx;
  margin-left: 5%;
  border-radius: 5px;
  border-width: 1px;
  border-color: rgba(79, 152, 252, 0.1);
  border-style: solid;
  position: relative;
}

.input{
  position: absolute;
  top: 15rpx;
  width: 95%;
  left: 5%;
  line-height: 50rpx;
  height: 370rpx;
  font-size: 15px;
  color: rgb(51, 51, 51);
}

.bottom{
  margin-top: 40rpx;
  height: 86rpx;
  position: relative;
}

.cancel{
  position: absolute;
  left: 100rpx;
  width: 250rpx;
  height: 86rpx;
  background-color: rgb(202, 202, 202);
  color: rgb(51, 51, 51);
  line-height: 85rpx;
}

.sure{
  position: absolute;
  right: 100rpx;
  width: 250rpx;
  height: 86rpx;
  background-color: rgb(255, 228, 1);
  color: rgb(51, 51, 51);
  line-height: 86rpx;
}