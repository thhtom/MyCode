  width: 0;
  height: 0;
  color: transparent;
}
.order_list{
  width: 720rpx;
  margin-left: 15rpx;
  border-width: 1px;
  border-color: rgba(79, 152, 252, 0.1);
  border-radius: 4px;
  border-style: solid;
  margin-top: 20rpx;
}
#top{
  width: 100%;
  height: 80rpx; 
